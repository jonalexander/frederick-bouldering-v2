
<%= form_for @sub_area do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'Name' %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: 'Provide details about this area ie: rock quality, climbing style, history, etc.' %>

  <!-- <%= f.label :location %>
  <%= f.text_area :location, placeholder: 'Provide specific information as to the location of this area within its larger main area.' %> -->

  <%= f.label 'Area' %>
  <%= f.collection_select(:main_area_id, MainArea.all, :id, :name, {:selected => @main_area_id} ) %>
  <%= f.submit "Submit"%>

<% end %>
