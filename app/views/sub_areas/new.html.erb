<div class="wrapper" id="sub-area-new">

  <table id="sub-area-new">
    <tbody>

      <tr>  <!-- header row -->
        <td class="left-col-head" colspan="2">
          <h1> Add Subarea </h1>
        </td>

        <td class="right-col-head">
          <h4> Frederick Bouldering </h4>
        </td>

      </tr> <!-- header row -->

      <tr>  <!-- main content -->
        <td class="left-col" colspan="2">

          <%= form_for @sub_area do |f| %>

            <%= f.text_field :name, placeholder: 'name' %>
            <%= f.text_area :description, placeholder: 'description' %>
            <%= f.collection_select(:main_area_id, MainArea.all, :id, :name, {:selected => @main_area_id} ) %>
            <%= f.submit "Submit"%>

          <% end %>

        </td>

        <td class="right-col">
          <div></div>
        </td>

      </tr> <!-- main content -->

      <tr><td></td></tr>
    </tbody>
  </table>

</div> <!-- wrapper -->
