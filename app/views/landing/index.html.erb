<!-- notifications -->
<div class="notice"> <%= notice %> </div>
<div class="alert"> <%= alert %> </div>
<!-- content wrapper -->
<div class="wrapper">
    <div class="landing">
      <div id="landing-body">

        <h1> Frederick Bouldering </h1>
        <h2> Watershed, Catoctin<br>&amp; more. </h2>
        <br>

        <%= button_to 'Browse By Area', main_areas_path, :class => "intro-content-button",:method => :get %>
        <br><br>

        <h3> Recently Added Problems </h3>
          <ul>
            <% @recent_problems.each do |problem| %>
              <% @problem_extended = "#{problem.name} #{problem.grade}" %>
              <li> <%= link_to @problem_extended, bproblem_path(problem) %> </li>
            <% end %>
         </ul>
       <br>

       <h3> Featured Photo <%= link_to 'Walk Into The Sky V7', bproblem_path(@feature) %> </h3>

      </div>
    </div>
</div> <!--wrapper-->
