<div class="wrapper">

  <table id="main-area-display">
    <tbody>

      <tr>  <!-- header row -->

        <td class="left-col-head" colspan="2">
          <h1> <%= @main_area.name %> </h1>
        </td>

        <td class="right-col-head">
          <h4> Frederick Bouldering </h4>
        </td>

      </tr> <!-- header row -->


      <tr>  <!-- main content -->

        <td class="left-col" colspan="2">  <!-- left column / list main areas-->

          <div class="item">
            <h3> Description </h3>
            <p> <%= @main_area.description %> </p>

          </div>

          <div class="item">
            <h3> Getting There </h3>
            <div class="main-area-descrip"><p> <%= @main_area.location %> </p></div>
          </div>

          <div class="item">
            <h3> Breakdown By Area </h3>
            <% @main_area.sub_areas.each do |sub_area| %>
              <div class="sub-area-listing">
                  <%= link_to "#{sub_area.name} (#{sub_area.bproblems.count})", sub_area_path(sub_area) %>
              </div>
            <% end %>
          </div>


          <div class="item">
            <h3> Map </h3>
            <div style="width: 100%; overflow: hidden;">
              <iframe
                 src="<%= @map_url %>"
                 width="100%"
                 height="300"
                 frameborder="0"
                 style="border:0; margin-top: 0px;">
              </iframe>
            </div>
          </div>

        </td> <!-- left col -->

        <td class="right-col"> <!-- right col -->

          <div class="col-block">
            <h3> Access </h3>
            <div class="main-area-descrip"><p> <%= @main_area.access %> </p></div>

            <h3> Recent Additions </h3>
            <hr>
            <% @main_area.bproblems.last(5).each do |bproblem| %>
              <% bproblem_extended = "#{bproblem.name} #{bproblem.grade}" %>
              <div class="sub-area-listing">
                  <%= link_to bproblem_extended, bproblem_path(bproblem) %>
              </div>
            <% end %>
          </div>

          <div class="col-block">

          </div>

        </td> <!-- right col- -->

      </tr> <!-- main content -->

      <tr><td></td></tr>
    </tbody>
  </table>

</div> <!-- wrapper -->
