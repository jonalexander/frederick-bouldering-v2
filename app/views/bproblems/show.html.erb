<div class="wrapper">

  <table id="bproblem-show">
    <tbody>

      <tr>  <!-- header row -->
        <td class="left-col-head" colspan="2">
            <div id="left"><h1> <%= "#{@bproblem.name} #{@bproblem.grade}" %> </h1></div>
            <div id="right"> <%= link_to " Edit ", edit_bproblem_path(@bproblem) %> </div>


          <!-- breadcrumbs -->
          <div class="detail-row">
            <div class="main-area-descrip-detail-block">
              <%= link_to @main_area.name, main_area_path(@main_area) %>
            </div>
            <div class="main-area-descrip-detail-block">
              <%= link_to @sub_area.name, sub_area_path(@sub_area) %>
            </div>
          </div>


        </td>

        <td class="right-col-head">
          <h4> Frederick Bouldering </h4>
        </td>

      </tr> <!-- header row -->


      <tr>  <!-- main content -->

        <td class="left-col" colspan="2">  <!-- left column / list main areas-->

          <div class="item">
            <div class="problems-header">
              <h3> Description </h3>
            </div>

            <div class="main-area-descrip"> <%= @bproblem.description %> </div>
          </div>

          <div class="item" id="photos">

            <div class="problems-header">
              <h3> Photos </h3>
            </div>

            <div class="main-area-descrip">
              <% if @bproblem.photos.count > 0 %>
                <% @bproblem.photos.each do |photo| %>
                  <%= link_to photo.url.to_s, :target => "_blank" do %>
                    <%= image_tag(photo.med_thumb.url.to_s, :class => "bproblem-thumb", :alt => "Frederick Bouldering - #{@bproblem.name}") %>
                  <% end %>
                <% end %>
              <% else %>
                <p> This problem does not have any photos. </p>
              <% end %>
            </div>

          </div>

          <div class="item">
            <div class="problems-header">
              <h3> Add Photos </h3>
            </div>

            <div class="main-area-descrip">
              <%= render 'photo_form' %>
            </div>

          </div>

        </td> <!-- left col -->

        <td class="right-col"> <!-- right col -->

          <div class="col-block">
            <h3> <%= @sub_area.name %> </h3>
            <hr>

            <ul>
              <% @sub_area_problems.each do |bproblem| %>
                <li> <%= link_to "#{bproblem.name} #{bproblem.grade}", bproblem_path(bproblem)%> </li>
              <% end %>
            </ul>

          </div>

          <div class="col-block">
            <h3> Area Topo </h3>
            <hr>

            <p> Area topo image </p>

          </div>

          <div class="col-block">
            <h3> More <%= "#{@bproblem.grade}'s" %> </h3>
            <hr><hr>

            <ul>
              <% @bproblems_same_grade.each do |bproblem| %>
                <li> <%= link_to bproblem.name, bproblem_path(bproblem)%> </li>
              <% end %>
          </ul>

          </div>



        </td> <!-- right col- -->

      </tr> <!-- main content -->

      <tr><td></td></tr>
    </tbody>
  </table>

</div> <!-- wrapper -->
